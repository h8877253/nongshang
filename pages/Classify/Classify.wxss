.container_search {
  position: relative;
  width: 100%;
  background-color: #fff;
  color: #939393;
  padding-top: 50px;
}

.search_btn {
  padding: 7px 10px;
  background-color: #f2f2f2;
  border-top: 1px solid #d8d8d8;
  border-bottom: 1px solid #d8d8d8;
  width: 100%;
  box-sizing: border-box; 
}

.search_btn view {
  height: 30px;
  background-color: #fff;
  text-align: center;
  line-height: 30px;
  border-radius: 5rpx;
}

.search_btn view image {
  width: 30rpx;
  height: 30rpx;
  margin-top: -5rpx;
  display: inline-block;
}

.nav_left {
  display: inline-block;
  width: 200rpx;
  height: 100%;
  background: #f5f5f5;
  position: fixed;
  z-index: 999;
}

.nav_left .nav_left_items {
  height: 40px;
  line-height: 40px;
  text-align: center;
  font-size: 26rpx;
}

.nav_left .nav_left_items.active {
  background: #fff;
  color: #39b54a;
}

.nav_right {
  display: inline-block;
  height: 100%;
  width: 550rpx;
  padding: 20rpx 10rpx;
  box-sizing: border-box;
  background: #fff;
  position: absolute;
  margin-left: 200rpx;
}

.nav_right .nav_right_items {
  float: left;
  width: 33.33%;
  height: 210rpx;
  text-align: center;
}

.nav_right .nav_right_items image {
  width: 160rpx;
  height: 160rpx;
}

.nav_right .nav_right_items text {
  display: block;
  margin-top: 10rpx;
  font-size: 24rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.nodata_text {
  color: black;
  font-size: 14px;
  text-align: center;
}

.single_item {
  width: 100%;
  height: 200rpx;
  background-color: #fff;
  overflow: hidden;
  margin-bottom: 14rpx;
}

.single_item .img-box {
  width: 200rpx;
  height: 200rpx;
  overflow: hidden;
  display: inline-block;
  padding: 10rpx;
  box-sizing: border-box;
}

.single_item .img-box image {
  width: 100%;
  height: 100%;
}

.single_item .right-box {
  width: 300rpx;
  height: 100%;
  display: inline-block;
  border-bottom: 1px solid #ddd;
  vertical-align: top;
  margin-left: 15rpx;
  padding-top: 20rpx;
  box-sizing: border-box;
}

.single_item .goods-title {
  width: 100%;
  color: #000;
  display: block;
  margin-bottom: 10rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 28rpx;
}

.single_item .goods-volume {
  font-size: 22rpx;
  margin-bottom: 40rpx;
  display: block;
}

.single_item .goods-price {
  width: 280rpx;
  color: #ff4a4a;
  display: block;
  font-size: 28rpx;
  font-weight: 700;
}

.single_item .goods-price .original-price {
  font-size: 20rpx;
  color: #939393;
  text-decoration: line-through;
  font-weight: normal;
}

.nodata {
  height: 50%;
  line-height: 100rpx;
}

.nav_right_items .allshoplist {
  height: 210rpx;
  padding: 25rpx;
}

.nav_right_items .allshoplist image {
  padding: 30rpx;
  border-radius: 100%;
  height: 120rpx;
  width: 120rpx;
}
